rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    // Check if user has 'isAdmin' flag in their user profile
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Check if user is a Grader or Admin
    function isGrader() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isGrader == true ||
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
             );
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // 1. Users (Allows users to manage their own profile, Admins manage all)
    match /users/{userId} {
      allow read: if request.auth != null; // Needed for isGrader/isAdmin checks to work
      allow write: if isOwner(userId) || isAdmin();
    }

    // 2. Questions
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // 3. Submissions 
    match /submissions/{submissionId} {
      // Allow read so students can see leaderboard, graders can grade
      allow read: if request.auth != null;
      
      // Allow creation by authenticated users
      allow create: if request.auth != null; 
      
      // Allow update if Owner OR Grader OR Admin
      // Supports both userId field and studentEmail field pattern
      allow update: if (request.auth != null && resource.data.userId == request.auth.uid) || 
                       (request.auth != null && resource.data.studentEmail == request.auth.token.email) ||
                       isGrader() || 
                       isAdmin();
    }

    // 4. Active Tests 
    match /activeTests/{testId} {
      // FIX: Allow any authenticated user to read (User Request)
      allow read: if request.auth != null; 
      
      // Allow creating if logged in
      allow create: if request.auth != null;

      // Allow updating/deleting only if Owner OR Admin
      allow update, delete: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
    }

    // 5. Schedule
    match /schedule/{day} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // 6. Settings
    match /settings/{setting} {
      allow read: if true; // Login page might need this
      allow write: if isAdmin();
    }

    // 7. Leaderboard (if exists)
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if false;
    }
  }
}

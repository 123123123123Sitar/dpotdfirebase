rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isGrader() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isGrader == true ||
        isAdmin()
      );
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null; 
      allow write: if isAdmin();
    }

    // Questions: Read by students (auth only), Write by admins
    match /questions/{day} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Schedule: Read by students (auth only), Write by admins
    match /schedule/{day} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Settings: Public read for login logic
    match /settings/{docId} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // Active Tests: 
    // - Students need to read their OWN active test (checkTodayTest)
    // - Students also need to CREATE/UPDATE their own active test
    match /activeTests/{testId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin(); // Only admins should delete logs if needed
    }

    // Submissions
    match /submissions/{submissionId} {
      // Students can create their submission
      allow create: if request.auth != null && request.resource.data.studentEmail == request.auth.token.email;
      
      // READ RULES:
      // 1. Owner can read fully
      // 2. Grader/Admin can read fully
      // 3. Students need to read ALL submissions for the leaderboard?
      //    IF the leaderboard logic is client-side (download all docs), we MUST allow list.
      //    Ideally, we'd use a cloud function to aggregate leaderboard, but for this quick app, we allow read.
      
      allow read: if request.auth != null; // <--- CHANGED: Open read to auth users for leaderboard
      
      // Graders can update grading gradingStatus, q3Score, etc.
      allow update: if isGrader() || (request.auth != null && resource.data.studentEmail == request.auth.token.email);
    }
  }
}
